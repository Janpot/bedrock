{
  "name": "bedrock",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "node test.js --unit --system",
    "test-unit": "node test.js --unit",
    "test-system": "node test.js --system",
    "lint": "grunt jshint",
    "ci-test": "node test.js --unit --system",
    "ci-lint": "grunt jshint --mode=ci || exit 0",
    "coverage": "mkdir -p reports && rm -rf lib-cov; ./node_modules/visionmedia-jscoverage/jscoverage lib lib-cov && BEDROCK_COV=1 node test.js > reports/coverage.html && rm -rf lib-cov",
    "install-selenium": "test ! -e /tmp/sv-selenium/selenium-server-standalone.jar && ./node_modules/.bin/install_selenium; test ! -e /tmp/sv-selenium/chromedriver && ./node_modules/.bin/install_chromedriver; echo 'Selenium and chromedriver have been successfully installed.'",
    "bootstrap": "make -C ../bedrock-bootstrap bootstrap && rsync -av --exclude=js/bootstrap.min.js ../bedrock-bootstrap/bootstrap/ ./site/static/bootstrap/",
    "minify": "grunt"
  },
  "dependencies": {
    "almond": "~0.2.6",
    "async": "~0.2.10",
    "bcrypt": "~0.7.2",
    "commander": "~1.3.0",
    "connect": "~2.7.10",
    "connect-mongo": "git://github.com/digitalbazaar/connect-mongo.git",
    "emailjs": "git://github.com/digitalbazaar/emailjs.git",
    "express": "~3.3.5",
    "grunt": "~0.4.1",
    "grunt-angular-templates": "git://github.com/digitalbazaar/grunt-angular-templates",
    "grunt-cli": "~0.1.13",
    "grunt-contrib-cssmin": "~0.7.0",
    "grunt-contrib-requirejs": "~0.4.1",
    "http-signature": "~0.10.0",
    "i18n": "~0.4.0",
    "jqtpl": "~1.1.0",
    "jsdom": "~0.7.0",
    "json-schema": "git://github.com/digitalbazaar/json-schema.git",
    "jsonld": "~0.1.27",
    "mailparser": "~0.3.0",
    "mkdirp": "~0.3.5",
    "mongodb": "~1.3.18",
    "node-forge": "~0.2.28",
    "passport": "~0.1.9",
    "passport-local": "~0.1.3",
    "pkginfo": "~0.3.0",
    "posix": "~1.0.0",
    "prompt": "~0.2.11",
    "redback": "~0.3.6",
    "request": "~2.27.0",
    "requirejs": "~2.1.8",
    "restangular": "~1.3.1",
    "sprintf": "~0.1.1",
    "swig": "git://github.com/digitalbazaar/swig.git",
    "ua-parser": "~0.3.0",
    "underscore": "~1.5.0",
    "ursa": "v0.8.0",
    "walk": "~2.2.1",
    "winston": "~0.7.0",
    "winston-mail": "~0.2.1"
  },
  "devDependencies": {
    "chai": "~1.9.0",
    "chai-as-promised": "~4.1.0",
    "grunt-contrib-jshint": "~0.8.0",
    "grunt-contrib-yuidoc": "~0.5.0",
    "grunt-jsdoc": "~0.5.1",
    "mocha": "~1.17.1",
    "mocha-as-promised": "~2.0.0",
    "superagent": "0.16.0",
    "sv-selenium": "~0.2.2",
    "visionmedia-jscoverage": "~1.0.0",
    "wd": "~0.2.10"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "directories": {
    "lib": "./lib/bedrock"
  },
  "main": "./lib/bedrock"
}
