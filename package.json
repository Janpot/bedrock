{
  "name": "bedrock",
  "version": "1.0.1-dev",
  "description": "A core foundation for rich Web applications.",
  "scripts": {
    "start": "node index.js",
    "test": "node index.js test",
    "lint": "grunt jshint",
    "ci-lint": "grunt --no-color jshint --mode=ci || exit 0",
    "coverage": "rm -rf coverage && ./node_modules/.bin/istanbul cover index.js -- test --mocha-reporter tap && ./node_modules/.bin/istanbul report --root coverage lcov cobertura"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/bedrock"
  },
  "dependencies": {
    "async": "~0.9.0",
    "async-node-events": "~0.0.7",
    "chai": "~1.9.2",
    "chai-as-promised": "~4.1.0",
    "commander": "~2.7.1",
    "istanbul": "~0.3.7",
    "jsonld": "~0.3.22",
    "mkdirp": "~0.5.0",
    "mocha": "~2.0.1",
    "pkginfo": "~0.3.0",
    "underscore": "~1.7.0",
    "winston": "~0.7.0",
    "winston-mail": "~0.2.9"
  },
  "optionalDependencies": {
    "posix": "~1.0.4"
  },
  "devDependencies": {
    "grunt": "~0.4.1",
    "grunt-cli": "~0.1.13",
    "grunt-contrib-jshint": "~0.11.1",
    "grunt-jscs": "~1.6.0"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "directories": {
    "lib": "./lib/bedrock"
  },
  "main": "./lib/bedrock"
}
